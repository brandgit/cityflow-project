# Configuration pour déploiement EC2 AWS
# Copier ce fichier vers .env sur EC2

# ============================================
# ENVIRONNEMENT AWS
# ============================================
AWS_EXECUTION_ENV=AWS_EC2
AWS_REGION=eu-west-3

# ============================================
# BASE DE DONNÉES - DynamoDB (Production AWS)
# ============================================
DATABASE_TYPE=dynamodb
USE_DYNAMODB=true

# Tables DynamoDB
DYNAMODB_METRICS_TABLE=metrics
DYNAMODB_REPORTS_TABLE=reports

# ============================================
# STOCKAGE S3 (Production AWS)
# ============================================
USE_S3=true

# Bucket pour les rapports (résultats)
S3_REPORTS_BUCKET=cityflow-reports-paris
S3_REPORTS_PREFIX=reports

# Bucket pour les données brutes (source)
S3_RAW_BUCKET=bucket-cityflow-paris-s3-raw
S3_RAW_PREFIX=cityflow-raw/raw

# ============================================
# CHEMINS DE DONNÉES SUR EC2
# ============================================
DATA_DIR=/home/ubuntu/cityflow/data
BATCH_DATA_PATH=/home/ubuntu/cityflow/data/batch
API_DATA_PATH=/home/ubuntu/cityflow/data/api
OUTPUT_DIR=/home/ubuntu/cityflow/output

# Fichiers CSV (si stockés localement sur EC2)
COMPTAGES_CSV=/home/ubuntu/cityflow/data/batch/comptages-routiers-permanents.csv
CHANTIERS_CSV=/home/ubuntu/cityflow/data/batch/chantiers-perturbants-la-circulation.csv
REFERENTIEL_CSV=/home/ubuntu/cityflow/data/batch/referentiel-geographique.csv

# ============================================
# MODE EC2 (Découpage en chunks pour gros fichiers)
# ============================================
USE_EC2_MODE=true
MAX_FILE_SIZE_MB=500
EC2_CHUNK_SIZE=50000

# ============================================
# API
# ============================================
API_PORT=5001

# ============================================
# LOGS
# ============================================
LOG_LEVEL=INFO

